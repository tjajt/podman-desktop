{
  "name": "lima",
  "displayName": "Lima",
  "description": "Integration for Lima: Linux virtual machines (typically macOS)",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "podman-desktop",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": "^0.0.1"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Lima",
      "properties": {
        "lima.type": {
          "type": "string",
          "default": "podman",
          "enum": [
            "podman",
            "docker",
            "kubernetes"
          ],
          "description": "Engine type (requires restart of extension)"
        },
        "lima.name": {
          "type": "string",
          "default": "",
          "description": "Instance name (default is same name as type)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc && node ./scripts/build.js",
    "test": "vitest run --coverage --passWithNoTests",
    "test:watch": "vitest watch --coverage --passWithNoTests",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@podman-desktop/api": "^0.0.1"
  },
  "devDependencies": {
    "adm-zip": "^0.5.10",
    "mkdirp": "^3.0.1"
  }
}
